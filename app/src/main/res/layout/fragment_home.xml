<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới Thiệu Ứng Dụng"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đây là ứng dụng cho phép bạn trò chuyện với AI bằng cách nhập vai nhân vật."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Để bắt đầu chọn menu ở phía dưới để bắt đầu. Tạo nhân vật trước, sau đó bắt đầu trò chuyện với AI bằng nhân vật đó."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ứng dụng cho phép tùy chỉnh mô hình AI nếu bạn muốn. Nếu không rành về kỹ thuật, bạn vẫn có thể sử dụng bình thường."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các mô hình AI có thể bảo trì hoặc tạm ngừng hoạt động, nên đôi khi có thể không hoạt động 100%."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ứng dụng hỗ trợ kết nối với mô hình AI local trên máy tính của bạn. Bạn cần endpoint và API key để kết nối."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Endpoint: Địa chỉ kết nối đến mô hình AI"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API KEY: Mã bảo mật để truy cập mô hình AI"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Để kết nối với mô hình AI, bạn cần lấy thông tin từ nhà cung cấp dịch vụ. Ví dụ endpoint cho các dịch vụ phổ biến:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chạy local trên máy tính: http://localhost:5000/v1/chat/completions"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenAI: https://api.openai.com/v1/chat/completions"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deepseek: https://api.deepseek.com/chat/completions"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu ý: Không dùng endpoint của dịch vụ này cho dịch vụ khác. Mỗi dịch vụ có endpoint riêng và sẽ báo lỗi nếu dùng sai."/>
    </LinearLayout>
</ScrollView>